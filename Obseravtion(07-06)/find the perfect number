def is_perfect(num):
    divisor_sum = 0
    for i in range(1, num):
        if num % i == 0:
            divisor_sum += i
    return divisor_sum == num

# Example usage:
number = 28
if is_perfect(number):
    print(number, "is a perfect number.")
else:
    print(number, "is not a perfect number.")
