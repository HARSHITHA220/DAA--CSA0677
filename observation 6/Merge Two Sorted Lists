class ListNode:
    def __init__(self, val=0, next=None):
        self.val = val
        self.next = next

def mergeTwoLists(list1, list2):
    # Initialize a dummy node
    dummy = ListNode()
    curr = dummy
    
    # Pointers to iterate over list1 and list2
    p1, p2 = list1, list2
    
    # Merge the lists
    while p1 and p2:
        if p1.val < p2.val:
            curr.next = p1
            p1 = p1.next
        else:
            curr.next = p2
            p2 = p2.next
        curr = curr.next
    
    # Append remaining nodes if any
    if p1:
        curr.next = p1
    elif p2:
        curr.next = p2
    
    # Return the head of the merged list (next of dummy node)
    return dummy.next
